@model agencia_viagem_mvc.Models.Cliente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando Dados do Cliente";
}

<div class="panel panel-primary">
    <div class="panel-heading">Detalhes Cliente @Html.DisplayFor(model => model.Nome) </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                <div class="form-control" disabled="true">
                    @Html.DisplayFor(model => model.Nome)
                    @Html.DisplayFor(model => model.Sobrenome)
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.DisplayNameFor(model => model.Cpf)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-list"></i>
                </span>
                @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>


        <div class="form-group">
            @Html.DisplayNameFor(model => model.Rg)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon  glyphicon-list"></i>
                </span>
                @Html.EditorFor(model => model.Rg, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>


        <div class="form-group">
            @Html.DisplayNameFor(model => model.Email)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    @Html.Raw("@")
                </span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

    </div>

    <div class="panel-footer panel-info">
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    @Html.ActionLink("Retornar a Listagem de Clientes", "Index", null, new { @class = "btn btn-info col-md-12" })
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Alterar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info col-md-8" })
                </div>
            </div>
        </div>
    </div>
</div>
