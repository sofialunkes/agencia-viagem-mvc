@model IEnumerable<Modelo.Cadastros.Compra>

@{
    Layout = null;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Compras Realizadas por Cliente
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CompraId)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>Cliente</th>
                    <th>Pacote</th>
                    <th>Descrição do Pacote</th>
                </tr>
            </thead>
            <tbody>
                @foreach ( var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CompraId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Pacote.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Pacote.Descricao)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">

    </div>
</div>