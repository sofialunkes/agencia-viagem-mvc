@model agencia_viagem_mvc.Models.Venda

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes da COMPRA efetuada";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Detalhes da Compra
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Cliente.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>

        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Pacote.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-plane"></i>
                </span>
                @Html.EditorFor(model => model.Pacote.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Descricao)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-pencil"></i>
                </span>
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.DataAquisicao)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-calendar"></i>
                </span>
                @Html.EditorFor(model => model.DataAquisicao, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    @Html.ActionLink("Retornar para Listagem de Vendas", "Index", null, new { @class = "btn btn-info col-md-12" })
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Alterar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info col-md-8" })
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#menuVenda').addClass("active");
        });
    </script>
}