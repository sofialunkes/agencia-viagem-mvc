@model Modelo.Tabelas.Pacote

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando Detalhes do Pacote ";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do Pacote a ser removido
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Tabelas/Views/Pacotes/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        @Html.ActionLink("Retornar para Listagem de Pacotes", "Index", null, new { @class = "btn btn-info col-md-12" })
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Remover Pacote" class="btn btn-danger col-md-8" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@Html.Partial("~/Views/Vendas/_PorPacote.cshtml", Model.Compras.ToList())