@model Modelo.Tabelas.Pacote

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando dados do Pacote";
}
<div class="panel panel-primary">
    <div class="panel-heading">Detalhes Pacote @Html.DisplayFor(model => model.Nome)</div>
    <div class="panel-body">
       @Html.Partial("~/Views/Pacotes/_PartialDetailsContentPanel.cshtml",Model)
    </div>
    <div class="panel-footer panel-info">
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    @Html.ActionLink("Retornar para Listagem de Pacotes", "Index", null, new { @class = "btn btn-info col-md-12" })
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Alterar", "Edit", new { id = Model.PacoteId }, new { @class = "btn btn-info col-md-8" })
                </div>

            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Compras/_PorPacote.cshtml", Model.Compras.ToList())

@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#menuPacote').addClass("active");
        });
    </script>
}